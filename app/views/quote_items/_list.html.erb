<% if !defined?(show_quotes) %>
<% show_quotes = false %>
<% end %>
<table class="data">
	<tbody>
		<thead>
			<tr>
				<% if show_quotes %>
				<th>Quote</th>
				<th>Customer</th>
				<% else %>
				<th>Item #</th>
				<% end %>
				<th>LXD Part No.</th>
				<th>Description</th>
				<th>Quantity</th>
				<th>Cust Part No.</th>
				<th>Cost</th>
				<th>Unit Price</th>
				<th>Total Price</th>
				<th>Sales Order</th>
			</tr>
		</thead>
<% quote_items.each do |item| %>
		<tr>
			<% if show_quotes %>
			<td><%= link_to item.quote.quote_number, quote_url(item.quote) %></td>
			<td><%= link_to item.quote.customer_name, customer_url(item.quote.fcustno) %></td>
			<% else %>
			<td><%= item.fenumber %></td>
			<% end %>
			<td><%= link_to_if item.item.present?, item.part_number, item_url(item.part_number) %></td>
			<td><%= simple_format item.fdesc.strip %></td>
			<td><%= cm item.quantity, :sales_order_quantity %></td>
			<td><%= item.fcustpart %></td>
			<td>$<%= cm item.item.try(:total_cost), :dollars %></td>
			<td>$<%= cm item.unit_price, :dollars %></td>
			<td>$<%= cm (item.unit_price * item.quantity), :dollars %></td>
			<td><%= link_to item.sales_order_number, sales_order_url(item.fsono) %></td>
		</tr>
<% end %>
	</tbody>
</table>
