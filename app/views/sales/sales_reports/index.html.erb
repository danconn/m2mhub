<%= render 'sales/sales_reports/submenu' %>
<br />

<h2>Sales Reports</h2>
<% if @sales_reports.size > 0 %>
<%= will_paginate @sales_reports %>
<table class="data">
	<thead>
		<tr>
			<th>Date</th>
			<% [:invoiced_sales, :net_invoiced_sales, :bookings].each do |key| %>
			<th><%= Sales::SalesReport.human_attribute_name(key) %></th>
			<% end %>
		</tr>
	</thead>
	<tbody>
		<% @sales_reports.each do |report| %>
		<tr>
			<td><%= report.date.to_s(:month_year) %></td>
			<% [:invoiced_sales, :net_invoiced_sales, :bookings].each do |key| %>
			<td class="right"><%= cm report.send(key), :rounded_dollars %></td>
			<% end %>
		</tr>
		<% end %>
	</tbody>
</table>			
<% end %>
