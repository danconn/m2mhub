<% content_for :javascripts do %>
<script type="text/javascript">
$(function() {
	$( ".autocompany > input" ).autocomplete({
		source: "<%= m2m_customers_url %>",
		minLength: 2
	});
})
$(function() {
	$( ".autopart > input" ).autocomplete({
		source: "<%= items_url %>",
		minLength: 2
	});
})
</script>
<% end %>

<%= f.inputs do %>
  <%= f.input :company_name, :wrapper_html => { :class => 'autocompany' } %> 
	<%= f.input :contact_name, :wrapper_html => { :class => 'autocontact' } %>
<% end %>

<% f.semantic_fields_for :items, @quote_item do |qif| %>
	<%= f.inputs do %>
  <%= qif.input :fpartno, :wrapper_html => { :class => 'autopart' } %>
	<% end %>
<% end %>

<%= f.buttons do %>
  <%= f.commit_button %>
  <%= f.cancel_link %>
<% end %>
