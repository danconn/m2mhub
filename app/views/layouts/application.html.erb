<!DOCTYPE html>
<html>
<head>
  <%= stylesheet_link_tag 'formtastic', 'styles', 'blitzer/jquery-ui-1.8.6.custom' %>
	<%= yield :stylesheets %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
  <%= yield :javascripts -%>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
  <meta name="author" content="heedspin" />
  <title><%= get_meta_title %></title>
	<link rel="icon" type="image/png" href="<%= path_to_image('/favicon.ico') %>" />
</head>
<body>
	<div id="wrapper">
		<div id="header">
			<% if current_user %>
				<% links = [] %>
				<% links.push link_to(current_user.first_name, user_path(current_user.id)) %>
				<% links.push link_to('Log Out', logout_path) %>
				<% links.push link_to_unless_current('Users', users_url) if permitted_to? :manage, :users %>
				<% links.push link_to_unless_current('History', history_index_url) if permitted_to?(:read, :user_activities) %>
				<div class="usermenu"><%= raw links.join(' | ') %></div>
			<% end %>
			<div class="banner">
				<div class="logo">
					<%= link_to image_tag("companies/#{CompanyConfig.company_key}/logo.gif", :alt => CompanyConfig.long_name, :title => 'Home'), root_url %>
					<%= image_tag 'm2m.gif', :alt => 'm2m', :title => 'm2m rocks' %>
				</div> 
				<div class="tagline"><%= CompanyConfig.company_key.upcase %>'s Made2Manage Hub</div>				
			</div><!-- banner -->
			<div class="clear"></div>  
			<div class="nav">    
				<ul>
					<li class="<%= menu_selected(:controller => :home) %>">
						<%= link_to 'Home', root_url %>
					</li>
					<% if permitted_to?(:read, :quality_quality_dashboard) %>
					<li class="<%= menu_selected :controllers => [:rmas, :quality_dashboard, :rma_reports, :customer_otd_reports, :credit_memo_reports] %>">
						<%= link_to 'Quality', quality_url %>
					</li>
					<% end %>
					<% if permitted_to?(:read, :quotes) %>
					<li class="<%= menu_selected(:controller => :quotes) %>">
						<%= link_to 'Quotes', quotes_url %>
					</li>
					<% end %>
					<% if permitted_to?(:read, :sales_order_items) %>
					<li class="<%= menu_selected(:controller => [:sales_order_items, :sales_orders, :invoiced_sales_reports, :pro_forma_sales_reports]) %>">
						<%= link_to 'Sales', sales_order_items_url %>
					</li>
					<% end %>
					<% if permitted_to?(:read, :customers) %>
					<li class="<%= menu_selected(:controller => :customers) %>">
						<%= link_to 'Customers', customers_url %>
					</li>
					<% end %>
					<% if permitted_to?(:read, :items) %>
					<li class="<%= menu_selected(:path_starts_with => '/items') %>">
						<%= link_to 'Items', items_url %>
					</li>
					<% end %>
					<% if permitted_to?(:read, :shipping_shipping_dashboard) %>
					<li class="<%= menu_selected(:path => /^\/(shipp|receivers)/) %>">
						<%= link_to 'Shipping', shipping_url %>
					</li>
					<% end %>
					<% if permitted_to?(:read, :sales_backlog_reports) %>
					<li class="<%= menu_selected(:controller => :sales_backlog_reports) %>">
						<%= link_to 'backlog', sales_backlog_reports_url %>
					</li>
					<% end %>
					<% if permitted_to?(:read, :production_production_dashboard) %>
					<li class="<%= menu_selected(:controller => [:production_dashboard, :work_center_load_reports]) %>">
						<%= link_to 'Production', production_url %>
					</li>
					<% end %>
					<% if (CompanyConfig.company_key == 'lxd') and permitted_to?(:read, :doogle_displays) %>
					<li class="<%= menu_selected(:controller => [:displays, :display_logs]) %>">
						<%= link_to 'Doogle', doogle_displays_url %>
					</li>
					<% end %>
				</ul>        
			</div><!-- nav -->
		</div><!-- header -->
		<div class="clear"></div>
		<div id="main">
      <% unless flash[:notice].blank? %>
        <div class="flash_notice"><%= h flash[:notice] %></div>
      <% end %>
      <% unless flash[:error].blank? %>
        <div class="flash_error"><%= h flash[:error] %></div>
      <% end %>
			<%= yield %>
		</div><!-- main -->
    <div class="clear"></div>
		<% if post_main = yield(:post_main) %>
		<%= raw post_main %>
		<% end %>
		<div id="footer">
			<p>
				&#169; <%= Date.current.year %> <%= raw CompanyConfig.long_name %> <span>&#149;</span> 7300 ACC Boulevard  
				<span>&#149;</span> Raleigh, North Carolina 27617 <span>&#149;</span>
				<%= link_to CompanyConfig.website, "http://#{CompanyConfig.website}" %>
			</p>
		</div><!-- footer -->
	</div><!-- end wrapper -->
</body>
<% if Rails.env.production? %>
<script type="text/javascript">
  var _gaq = _gaq || [];
  _gaq.push(['_setAccount', <%= CompanyConfig.google_analytics_key %>]);
  _gaq.push(['_trackPageview']);
  (function() {
    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
  })();
</script>
<% end %>
</html>
