<!DOCTYPE html>
<html>
<head>
  <%= stylesheet_link_tag 'formtastic', 'styles', 'blitzer/jquery-ui-1.8.6.custom' %>
	<%= yield :stylesheets %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
	<%= javascript_include_tag 'tiny_mce/jquery.tinymce.js' %>
  <%= javascript_include_tag 'jquery-ui-1.8.6.custom.min.js' %>
  <%= javascript_include_tag 'application_admin.js' %>
  <%= yield :javascripts -%>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
  <meta name="author" content="heedspin" />
  <title><%= get_meta_title %></title>
	<link rel="icon" type="image/png" href="<%= path_to_image('/favicon.ico') %>" />
</head>
<body>
	<div id="wrapper">
		<div id="header">
			<% if current_user %>
				<% links = [] %>
				<% links.push link_to(current_user.first_name, user_path(current_user.id)) %>
				<% links.push link_to('Log Out', logout_path) %>
				<% links.push link_to_unless_current('Users', users_url) if permitted_to? :manage, :users %>
				<div class="usermenu"><%= raw links.join(' | ') %></div>
			<% end %>
			<div class="banner">
				<div class="logo">
					<%= link_to image_tag("companies/#{CompanyConfig.company_key}/logo.gif", :alt => CompanyConfig.company_name, :title => 'Home'), root_url %>
					<%= image_tag 'm2m.gif', :alt => 'm2m', :title => 'm2m rocks' %>
				</div> 
				<div class="tagline"><%= CompanyConfig.company_key.upcase %>'s Made2Manage Hub</div>				
			</div><!-- banner -->
			<div class="clear"></div>  
			<div class="nav">    
				<ul>
					<li class="<%= controller_selected(:home) %>">
						<%= link_to 'Home', root_url %>
					</li>
					<% if permitted_to?(:read, :sales_orders) %>
					<li class="<%= controller_selected(:sales_orders) %>">
						<%= link_to 'Sales Orders', sales_orders_url %>
					</li>
					<% end %>
					<% if permitted_to?(:read, :items) %>
					<li class="<%= controller_selected(:items) %>">
						<%= link_to 'Items', items_url %>
					</li>
					<% end %>
					<% if permitted_to?(:read, :user_activities) %>
					<li class="<%= controller_selected(:user_activities) %>">
						<%= link_to 'User Activity', user_activities_url %>
					</li>
					<% end %>
				</ul>        
			</div><!-- nav -->
		</div><!-- header -->
		<div class="clear"></div>
		<div id="main">
      <% unless flash[:notice].blank? %>
        <div class="flash_notice"><%= h flash[:notice] %></div>
      <% end %>
      <% unless flash[:error].blank? %>
        <div class="flash_error"><%= h flash[:error] %></div>
      <% end %>
			<%= yield %>
		</div><!-- main -->
    <div class="clear"></div>
		<% if post_main = yield(:post_main) %>
		<%= raw post_main %>
		<% end %>
		<div id="footer">
			<p>
				&#169; <%= Date.current.year %> <%= AppConfig.company_name %> <span>&#149;</span> 7300 ACC Boulevard  
				<span>&#149;</span> Raleigh, North Carolina 27617 <span>&#149;</span>
				<%= link_to AppConfig.website, "http://#{CompanyConfig.website}" %>
			</p>
		</div><!-- footer -->
	</div><!-- end wrapper -->
</body>
<% if Rails.env.production? and AppConfig.lxd? %>
<script type="text/javascript">
  var _gaq = _gaq || [];
  _gaq.push(['_setAccount', <%= CompanyConfig.google_analytics_key %>]);
  _gaq.push(['_trackPageview']);
  (function() {
    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
  })();
</script>
<% end %>
</html>
