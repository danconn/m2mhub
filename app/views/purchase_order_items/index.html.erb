<% if @purchase_order_items.size == 0 %>
<% if @search && @search.filter_status.present? %>
	<p>
		No <%= @search.filter_status %> purchase orders.
		<%= link_to "Show all", purchase_order_items_path(:item => @search.part_number), :class => 'ajax_link' %>
	</p>
<% else %>
	<p>No purchase orders</p>
<% end %>
<% else %>
<table class="data">
	<thead>
		<tr>
			<th>PO No</th>
			<th>Item No</th>
			<th>Rel</th>
			<th>Quantity</th>
			<th>Promise<br />Date</th>
			<th>Status</th>
			<th>Received</th>
			<th>Date Received</th>
			<th>Vendor Part</th>
			<th>Description</th>
		</tr>
	</thead>
	<tbody>
	<% @purchase_order_items.each do |i| %>
		<tr>
			<td><%= i.purchase_order_number %></td>
			<td><%= i.item_number %></td>
			<td><%= i.release %></td>
			<td class="right"><%= cm i.quantity, :purchase_order_quantity %></td>
			<td><%= i.last_promise_date.to_s(:purchase_date) %></td>
			<td><%= i.purchase_order.status %></td>
			<td class="right"><%= cm i.quantity_received, :purchase_order_quantity %></td>
			<td><%= i.date_received.to_s(:purchase_date) if i.quantity_received > 0 %></td>
			<td><%= i.item.vendors.map { |v| v.fvpartno.strip }.join(', ') %></td>
			<td><%= h i.item.fdescript %></td>
		</tr>
	<% end %>
	<% if @search.filter_status.present? %>
	<tr>
		<td class="ninjaborders">
			<%= link_to "Show all", purchase_order_items_path(:item => @search.part_number), :class => 'ajax_link' %>
		</td>
	</tr>
	<% end %>
	</tbody>
</table>
<% end %>