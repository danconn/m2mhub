
<div class="submenu">
	<ul>
		<li class="datenav">
			<% if @next_date %>
			<%= link_to "<< #{@next_date.to_s(:shipper_date)}", shippers_url(:date => @next_date.to_s(:day_month_year)) %>
			<% else %>
			&lt;&lt;
			<% end %>
		</li>
		<li class="datenav">
			<%= @date.to_s(:shipper_date) %>
		</li>
		<li class="datenav">
			<% if @previous_date %>
			<%= link_to "#{@previous_date.to_s(:shipper_date)} >>", shippers_url(:date => @previous_date.to_s(:day_month_year)) %>
			<% else %>
			&gt;&gt;
			<% end %>
		</li>
	</ul>
</div>

<br />

<h2>Shippers for <%= @date.to_s(:shipper_date) %></h2>
<%= render 'list' %>

