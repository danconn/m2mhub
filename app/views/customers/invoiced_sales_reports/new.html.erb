<%= render 'customers/summary' %>

<%= semantic_form_for @report, :as => 'report', :url => customer_invoiced_sales_reports_url(@customer, :format => 'xls') do |f| %>
	<%= f.inputs do %>
  	<%= f.input :start_date, :as => :calendar %>
  	<%= f.input :end_date, :as => :calendar %>
	<% end %>
	<%= f.buttons do %>
	  <%= f.commit_button 'Export XLS' %>
	<% end %>
<% end %>
