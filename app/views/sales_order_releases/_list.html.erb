<% if !defined?(search) %>
<% search = nil %>
<% end %>

<% if sales_order_releases.size == 0 %>
<% if search && search.filter_status.present? %>
	<p>
		No <%= search.filter_status %> sales orders.
		<%= link_to "Show all", sales_order_releases_path(:item => search.part_number), :class => 'ajax_link' %>
	</p>
<% else %>
	<p>No sales orders</p>
<% end %>
<% else %>
<table class="data">
	<thead>
		<tr>
			<th>Due Date</th>
			<th>SO</th>
			<th>Qty</th>
			<th>Status</th>
			<th>Cust PO</th>
			<th>Customer</th>
			<th><%= CompanyConfig.short_name %> Part</th>
			<th>Rev</th>
			<th>Cust<br />Part</th>
			<th>Vend<br />Part</th>
			<th>Desc</th>
			<th>Cost</th>
			<th>Price</th>
		</tr>
	</thead>
	<tbody>
	<% sales_order_releases.each do |r| %>
		<tr>
			<td><%= r.due_date.to_s(:sales_date) %></td>
			<td><%= link_to r.sales_order.order_number, sales_order_url(r.sales_order) %></td>
			<td><%= cm r.quantity, :sales_order_quantity %></td>
			<td><%= r.status %></td>
			<td><%= r.sales_order.customer_po %></td>
			<td><%= link_to r.sales_order.customer_name, customer_url(r.sales_order.fcustno) %></td>
			<td><%= link_to r.item.item.part_number, item_url(r.item.item.part_number) %></td>
			<td><%= r.revision %></td>
			<td><%= r.item.customer_part_number %></td>
			<td><%= r.item.item.vendors.map { |v| v.vendor_part_number.strip }.join(', ') %></td>
			<td><%= h r.item.item.fdescript %></td>
			<td class="monitary">$<%= cm r.item.item.try(:total_cost), :dollars %></td>
			<td class="monitary">$<%= cm r.unit_price, :dollars %></td>
		</tr>
	<% end %>
	<% if search.try(:filter_status) %>
	<tr>
		<td class="ninjaborders">
			<%= link_to "Show all", sales_order_releases_path(:item => search.part_number), :class => 'ajax_link' %>
		</td>
	</tr>
	<% end %>
	
	</tbody>
</table>
<% end %>