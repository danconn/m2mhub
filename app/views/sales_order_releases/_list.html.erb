<table class="data">
	<thead>
		<tr>
			<th>Sales Order</th>
			<th>Quantity</th>
			<th>Status</th>
			<th>Cust PO</th>
			<th>Due Date</th>
			<th>Customer</th>
			<th><%= CompanyConfig.short_name %> Part</th>
			<th>Customer Part</th>
			<th>Vendor Part</th>
			<th>Description</th>
			<th>Cost</th>
			<th>Price</th>
		</tr>
	</thead>
	<tbody>
	<% @sales_order_releases.each do |i| %>
		<tr>
			<td><%= link_to i.sales_order.order_number, sales_order_url(i.sales_order) %></td>
			<td><%= cm i.quantity, :sales_order_quantity %></td>
			<td><%= i.sales_order.status %></td>
			<td><%= i.sales_order.customer_po %></td>
			<td><%= i.due_date.to_s(:sales_date) %></td>
			<td><%= link_to i.sales_order.customer_name, customer_url(i.sales_order.fcustno) %></td>
			<td><%= link_to i.item.item.part_number, item_url(i.item.item.part_number) %></td>
			<td><%= i.item.customer_part_number %></td>
			<td><%= i.item.item.vendors.map { |v| v.vendor_part_number.strip }.join(', ') %></td>
			<td><%= h i.item.item.fdescript %></td>
			<td class="monitary">$<%= cm i.item.item.try(:total_cost), :dollars %></td>
			<td class="monitary">$<%= cm i.unit_price, :dollars %></td>
		</tr>
	<% end %>
	</tbody>
</table>
