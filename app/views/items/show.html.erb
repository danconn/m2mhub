<% content_for :javascripts do %>
<script type="text/javascript">
$(function() {
	ajax_load_content('<%= purchase_order_items_url(:item => @item.part_number, :status => M2m::Status.open.to_s) %>', '#purchase_order_items');
	ajax_link('#shippers');
});

</script>
<% end %>

<%= render 'summary' %>

<%= render 'list' %>

<h3>Material Availability</h3>
<%= render 'material_availability_reports/show' %>

<h3>Purchase Orders:</h3>
<div id="purchase_order_items">
	<%= image_tag 'inprogress.gif', :alt => "In Progress" %>
</div>

<h3>Sales Orders</h3>
<div id="sales_order_releases">
	<%= render 'items/sales_order_releases/list' %>
	<%#= image_tag 'inprogress.gif', :alt => "In Progress" %>
</div>

<% if @quote_items.size > 0 %>
<h3>Quotes:</h3>
<div id="quote_items">
<%= render 'quote_items/list', :quote_items => @quote_items, :show_quotes => true %>
</div>
<% end %>

<h3>Shippers</h3>
<div id="shippers">
	<p>
	<% if @shippers_count == 0 %>
	No Shippers
	<% else %>
	<%= link_to "Show #{@shippers_count} Shippers", shippers_url(:item => @item.part_number), :class => 'ajax_link' %>	
	<% end %>
	</p>
</div>