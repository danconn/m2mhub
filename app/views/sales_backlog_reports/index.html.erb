<% semantic_form_for :search, @search, :url => sales_backlog_reports_path, :html => {:method => :get} do |f| %>
<table class="flatform">
	<tbody>
		<tr>
			<td>
				<% f.inputs do %>
				  <%= f.input :due_date, :as => :calendar, :value => @search.due_date.to_s(:backorder_date), :label => 'Due' %>
				<% end %>
			</td>
			<td>
				<% f.buttons do %>
				  <%= f.commit_button 'View' %>
					<%= f.commit_button 'Print' %>
				<% end %>
			</td>
			<td>
				<% f.inputs do %>
					<%= f.input :customer_status %>
					<%= f.input :fob_group %>
				<% end %>
			</td>
		</tr>
	</tbody>
</table>
<% end %>

<% if @search_performed %>
<%= render 'list' %>
<% end %>

<% content_for :javascripts do %>
	<%= javascript_include_tag 'jquery.popupWindow.js' %>
<script type="text/javascript">
$(function() {
	$('.jobspopup').popupWindow({ 
		centerScreen:1,
		height:700, 
		width: 400
	}); 
});
</script>
<% end %>