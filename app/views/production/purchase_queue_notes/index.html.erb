<%= render 'production/submenu' %>
<br />

<h2>Purchase Queue Notes</h2>

<p>
	<%= link_to 'New Note', new_purchase_queue_note_url %>
</p>

<table class="data">
	<tbody>
		<thead>
			<tr>
				<th>Item</th>
				<th class="purchase_queue_note">Note</th>
			</tr>
		</thead>
<% @notes.each do |note| %>
		<tr>
			<td><%= link_to_item note.item, note.part_number %></td>
			<td><%= simple_format note.comments %></td>
			<% if permitted_to? :manage, :production_purchase_queue_notes %>
			<td>
				<%= link_to 'edit', edit_purchase_queue_note_url(note) %> | 
				<%= link_to 'delete', purchase_queue_note_url(note), :method => :delete, :confirm => 'Are you sure?' %>
			</td>
			<% end %>
		</tr>
<% end %>
	</tbody>
</table>

