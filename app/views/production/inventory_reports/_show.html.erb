<% include_closed_details_javascript(image_tag('arrow_collapse.gif'),image_tag('arrow_expand.gif')) %>
<%= will_paginate @customer_reports %>

<table class="data">
	<thead>
		<tr>
			<th>Customer</th>
			<th>Part</th>
			<% Production::InventoryReportQuantity.all.each do |quantity| %>
			<th><%= quantity.name %></th>
			<% end %>
		</tr>
		<tr>
			<th colspan="2" class="right">Total</th>
			<% Production::InventoryReportQuantity.all.each do |quantity| %>
			<th class="right">$<%= cm @report.send(quantity.total_cost_key), :rounded_dollars %></th>
			<% end %>
		</tr>
	</thead>
	<tbody>
		<% @customer_reports.each do |customer_report| %>
		<% customer_report.item_reports.each do |item_report| %>
		<tr>
			<% if item_report == customer_report.item_reports.first %>
			<td rowspan="<%= customer_report.item_reports.size %>"><%= customer_report.customer_name %></td>
			<% end %>
			<td>
				<a href="#"><span class="show_closed_details" id="closed_details_<%= item_report.m2m_identity_column %>">
				<%= image_tag('arrow_collapse.gif') %>
				</span></a>
				<%= link_to item_report.part_number, item_url(item_report.item) %>
			</td>
			<% Production::InventoryReportQuantity.all.each do |quantity| %>
			<td class="right">
				$<%= cm item_report.send(quantity.total_cost_key), :rounded_dollars %>
				<div class="closed_details xclosed_details_<%= item_report.m2m_identity_column %>">
					<br /><%= cm item_report.send(quantity.quantity_key), :item_quantity %></td>
				</div>
			</td>
			<% end %>
		</tr>
		<% end %>
		<tr>
			<td colspan="2" class="right">Subtotal</td>
			<% Production::InventoryReportQuantity.all.each do |quantity| %>
			<th class="right">$<%= cm customer_report.send(quantity.total_cost_key), :rounded_dollars %></th>
			<% end %>
		</tr>
		<% end %>
	</tbody>
</table>
