<% semantic_form_for :lighthouse_ticket, @lighthouse_ticket, :url => rma_lighthouse_ticket_path(@rma.rma_number) do |f| %>
	<% f.inputs do %>
		<%= f.input :assigned_user_id, :as => :select, :collection => @lighthouse_ticket.user_options, :label => 'Assigned To', :include_blank => false %>
	  <%= f.input :title, :as => :string %>
		<%= f.input :body, :as => :text %>
	<% end %>
  <% f.buttons do %>
	  <%= f.commit_button 'Create' %>
	<% end %>
<% end %>
