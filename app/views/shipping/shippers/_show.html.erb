<div class="shipper">
	<p>
		<%= shipper.status %>: <%= shipper.fshipno %> to 
		<%= link_to shipper.customer_name, m2m_customer_number_url(shipper.customer_number) %> on 
		<%= link_to_unless shipper.ship_date == @date, shipper.ship_date.to_s(:sales_date), shippers_url(:date => shipper.ship_date.to_s(:day_month_year)) %> via
		<%= shipper.ship_via.strip %> <%= shipper.bill_of_lading %>
	</p>
	<%= render 'shipping/shippers/items', :shipper => shipper %>
</div>
