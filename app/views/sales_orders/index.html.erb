<%= will_paginate @sales_orders %>

<table class="data">
	<thead>
		<tr>
			<th>SO #</th>
			<th>Date</th>
			<th>Company</th>
			<th>Total Price</th>
			<th>Rep</th>
			<th>Coord</th>
			<th>Status</th>
		</tr>
	</thead>
	<tbody>
<% @sales_orders.each do |so| %>
		<tr>
			<td><%= link_to so.fsono, sales_order_url(so.fsono) %></td>
			<td><%= so.order_date.to_s(:sales_date) %></td>
			<td><%= link_to so.customer_name, customer_url(so.fcustno) %></td>
			<td class="monitary"><span class="currency_symbol">$</span><%= cm so.total_price, :rounded_dollars %></td>
			<td class="centered"><%= so.fsoldby %></td>
			<td class="centered"><%= so.fsocoord %></td>
			<td class="centered"><%= so.fstatus %></td>
		</tr>
<% end %>
	</tbody>
</table>

<%= will_paginate @sales_orders %>
