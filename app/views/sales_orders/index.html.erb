<%= will_paginate @sales_orders %>

<table class="data">
	<thead>
		<tr>
			<th>SO #</th>
			<th>Company</th>
			<th>Date</th>
			<th>Rep</th>
			<th>Coord</th>
			<th>Status</th>
		</tr>
	</thead>
	<tbody>
<% @sales_orders.each do |so| %>
		<tr>
			<td><%= link_to so.fsono, sales_order_url(so.fsono) %></td>
			<td><%= link_to so.customer_name, customer_url(so.fcustno) %></td>
			<td><%= so.forderdate.to_s(:number_date) %></td>
			<td><%= so.fsoldby %></td>
			<td><%= so.fsocoord %></td>
			<td><%= so.fstatus %></td>
		</tr>
<% end %>
	</tbody>
</table>

<%= will_paginate @sales_orders %>
